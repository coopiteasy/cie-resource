<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="d_day_report_document">
        <span style="border-bottom: 4pt solid #00B9E4;">
            Activity Summary D-Day:
            <span t-field="o.description" />
        </span>
        <t t-set="company" t-value="o.company_id" />
        <div class="page">
            <t t-call="resource_activity.invoice_header" />
            <div
                class="row"
                tyle="position:relative; margin-top:50px"
                name="activity-title"
            >
                <div class="coll-xs-6">
                    <h2>
                        <span style="border-bottom: 4pt solid #00B9E4;">
                            Activity Summary D-Day:
                            <span t-field="o.description" />
                            <span
                                t-field="o.date_start"
                                t-options="{&quot;format&quot;: &quot;d MMMM y&quot;}"
                            />
                        </span>
                    </h2>
                </div>
            </div>
            <div class="row" name="activity">
                <div class="col-xs-6" name="customer-information">
                    <div class="row" name="customer-title">
                        <h3>Client:</h3>
                    </div>
                    <div t-if="o.partner_id" class="row" name="customer-name">
                        <div
                            t-if="o.partner_id.parent_id.name"
                            t-field="o.partner_id.parent_id.name"
                        />
                        <div t-if="o.partner_id.name" t-field="o.partner_id.name" />
                        <div t-if="o.partner_id.phone">
                            Tel:
                            <span t-field="o.partner_id.phone" />
                        </div>
                        <div t-if="o.partner_id.mobile">
                            Mob:
                            <span t-field="o.partner_id.mobile" />
                        </div>
                    </div>
                    <div class="row" name="customer-participants">
                        <h3>Expected participants:</h3>
                        <span t-field="o.registrations_expected" />
                    </div>
                </div>
                <div class="col-xs-6" name="activity-information">
                    <div class="row" name="activity-title">
                        <h3>Activity:</h3>
                    </div>
                    <div class="row" name="activity-start">
                        <h4>Start time and place:</h4>
                        <div>
                            <span t-field="o.date_start" />
                        </div>
                        <div>
                            <span t-field="o.departure" />
                        </div>
                    </div>
                    <div class="row" name="activity-arrival">
                        <h4>End time and place:</h4>
                        <div>
                            <span t-field="o.date_end" />
                        </div>
                        <div>
                            <span t-field="o.arrival" />
                        </div>
                    </div>
                    <div class="row" name="activity-theme">
                        <h4>Theme:</h4>
                        <span t-field="o.activity_theme" />
                    </div>
                    <div class="row" name="activity-type">
                        <h4>Type:</h4>
                        <span t-field="o.activity_type" />
                    </div>
                    <div class="row" name="activity-lang">
                        <h4>Languages:</h4>
                        <t t-foreach="o.langs" t-as="lang">
                            <t t-if="lang">
                                <div t-field="lang.name" />
                            </t>
                        </t>
                    </div>
                </div>
            </div>
            <div class="row" name="registrations" style="position:relative;top:10px;">
                <div class="col-xs-12">
                    <h3>Participants and resources</h3>
                    <table
                        class="table table-striped border-easymy-coop"
                        style="width:90%;align:center;"
                    >
                        <thead class="invoice_tbody easymy-coop-normal">
                            <tr>
                                <th
                                    style="border-bottom: 2pt dotted #00B9E4 !important;"
                                >Attendee
                                </th>
                                <div t-if="not o.partner_id">
                                    <th
                                        style="border-bottom: 2pt dotted #00B9E4 !important;"
                                    >Mobile
                                    </th>
                                </div>
                                <th
                                    style="border-bottom: 2pt dotted #00B9E4 !important;"
                                >Registered participants
                                </th>
                                <th
                                    style="border-bottom: 2pt dotted #00B9E4 !important;"
                                >Present participants
                                </th>
                                <th
                                    style="border-bottom: 2pt dotted #00B9E4 !important;"
                                >Resource Planned
                                </th>
                                <th
                                    style="border-bottom: 2pt dotted #00B9E4 !important;"
                                >Quantity needed
                                </th>
                                <th
                                    style="border-bottom: 2pt dotted #00B9E4 !important;"
                                >Resource Used
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody easymy-coop-normal">
                            <tr t-foreach="o.registrations" t-as="l">
                                <td>
                                    <span t-field="l.attendee_id.name" />
                                </td>
                                <td t-if="not o.partner_id">
                                    <span
                                        t-if="l.attendee_id and l.attendee_id.mobile"
                                        t-field="l.attendee_id.mobile"
                                    />
                                </td>
                                <td>
                                    <span t-field="l.quantity" />
                                </td>
                                <td>
                                    <span />
                                </td>
                                <td>
                                    <span t-field="l.resource_category.name" />
                                </td>
                                <td>
                                    <span t-field="l.quantity_needed" />
                                </td>
                                <td>
                                    <span />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div name="comments" class="row" style="margin-top:5px">
                <div
                    class="col-xs-12"
                    name="internal-comments"
                    style="border: medium dashed #00B9E4;margin-top:5px;"
                >
                    <h2 style="margin-top:5px">Internal Comments</h2>
                    <p
                        t-field="o.internal_comment"
                        name="internal-comments-field"
                        style="font-size: 16px;"
                    />
                </div>
            </div>
        </div>
    </template>

    <template id="d_day_report">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="10" />
            <t t-set="data_report_header_spacing" t-value="5" />
            <t t-set="data_report_dpi" t-value="110" />
            <t t-foreach="docs" t-as="o">
                <t
                    t-call="resource_activity.d_day_report_document"
                    t-lang="o.partner_id.lang"
                />
            </t>
        </t>
    </template>

    <report
        id="action_d_day_report"
        string="Activity D-Day Report"
        name="resource_activity.d_day_report"
        model="resource.activity"
        report_type="qweb-pdf"
        menu="True"
    />
</odoo>
