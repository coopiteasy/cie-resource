<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- todo move this file to provelo_custom -->
    <template id="contact_name" inherit_id="base.contact_name">
        <xpath expr="//t[@t-if='object.name']" position="replace">
            <t t-if="object.name">
                <span itemprop="name" t-esc="object.name" />
            </t>
        </xpath>
    </template>

    <template id="external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath
            expr="//div[hasclass('header')]//div[@name='company_address']"
            position="replace"
        >
            <t t-set="location" t-value="o.location_id" />
            <div class="col-xs-5" name="company_address">
                <t t-if="location.address">
                    <div
                        t-field="location.address"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        style="border-bottom: 1px solid black;"
                        class="pull-left"
                    />
                </t>
                <t t-else="">
                    <div
                        t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        style="border-bottom: 1px solid black;"
                        class="pull-left"
                    />
                </t>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('footer')]" position="replace">
            <div class="footer o_standard_footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    Phone:
                    <t t-if="location.address.phone">
                        <span t-field="location.address.phone" />
                        |
                    </t>
                    <t t-if="not location.address.phone and company.phone">
                        <span t-field="company.phone" />
                        |
                    </t>
                    Email:
                    <t t-if="location.address.email">
                        <span t-field="location.address.email" />
                        |
                    </t>
                    <t t-if="not location.address.email and company.email">
                        <span t-field="company.email" />
                        |
                    </t>
                    Website:
                    <t t-if="location.address.website">
                        <span t-field="location.address.website" />
                        |
                    </t>
                    <t t-if="not location.address.website and company.website">
                        <span t-field="company.website" />
                        |
                    </t>
                    VAT:
                    <t t-if="company.vat">
                        <span t-field="company.vat" />
                        |
                    </t>
                    Reg.:
                    <t t-if="company.company_registry">
                        <span t-field="company.company_registry" />
                    </t>

                    <ul class="list-inline">
                        <li>Page:</li>
                        <li>
                            <span class="page" />
                        </li>
                        <li>/</li>
                        <li>
                            <span class="topage" />
                        </li>
                    </ul>
                </div>
            </div>
        </xpath>
    </template>

    <template id="invoice_header">
        <div class="row">
            <div class="col-xs-6">
                <img
                    t-if="company.logo"
                    t-att-src="image_data_uri(company.logo)"
                    style="height: 113px;"
                />
            </div>
        </div>
    </template>
</odoo>
